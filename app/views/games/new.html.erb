<div class="game-container">
  <div class="col-xs-12">
    <h1>Longest word game</h1>
    <hr>
    <br>
    <div class="row">
      <% @letters.each do |letter| %>
      <div class="letter btn-info"><%= letter.upcase %></div>
      <% end %>
    </div>
    <br>
    <hr>
    <form action="score" method="post" class="form-group">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="word" placeholder="the longest word is . . ." class="form-control" autofocus>
      <br>
      <input type="submit" value="Submit!" class="form-control btn btn-info">
      <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>
</div>
